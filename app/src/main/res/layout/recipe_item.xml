<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/card_corner_radius_4dp"
    app:cardElevation="@dimen/margin_8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/photo"
            android:scaleType="centerCrop"
            android:src="@mipmap/wood1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/description"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            tools:text="First Recipe"
            android:textColor="#e9330f"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo"
            app:layout_constraintBottom_toTopOf="@id/servings"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/servings"
            tools:text="Servings:7"
            android:textColor="#046c54"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo"
            />
        <TextView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients"
            tools:text="Ingredients:7"
            android:textColor="#046c54"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/steps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo"
            />
        <TextView
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            tools:text="Steps:7"
            android:textColor="#046c54"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/servings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>